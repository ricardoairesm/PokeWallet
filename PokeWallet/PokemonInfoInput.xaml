<Window x:Class="PokeWallet.PokemonInfoInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeWallet"
        mc:Ignorable="d"
        Title="PokemonInfoInput" Height="297" Width="323">
    <Grid Margin="0,0,0,-6">
        <Label Content="Name" HorizontalAlignment="Left" Margin="35,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.444,0.271"/>
        <Button Content="Add" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Click="Button_Click" Height="27" Width="79"/>
        <ComboBox  ItemsSource="{Binding pokeNames}" AllowDrop="False" IsEditable="True" SelectedItem="{Binding pokeNameSelecionado}" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>

    </Grid>
</Window>
