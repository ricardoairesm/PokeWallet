<Window x:Class="PokeWallet.PokemonUpdateInfoInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeWallet"
        mc:Ignorable="d"
        Title="PokemonUpdateInfoInput" Height="327" Width="385">
    <Grid Margin="0,0,0,15">
        <TextBox HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="{Binding Nickname}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nickname" HorizontalAlignment="Left" Margin="43,96,0,0" VerticalAlignment="Top"/>
        <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Click="Button_Click" Height="27" Width="79"/>

    </Grid>
</Window>
