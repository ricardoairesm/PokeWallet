<Window x:Class="PokeWallet.TrainerWallet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeWallet"
        mc:Ignorable="d"
        Title="TrainerWallet" Height="455" Width="461">
    <Grid HorizontalAlignment="Left" Width="672">
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,6" ItemsSource="{Binding DisplayWallet}" HorizontalAlignment="Left" Width="377">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
