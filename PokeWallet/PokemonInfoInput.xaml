<Window x:Class="PokeWallet.PokemonInfoInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeWallet"
        mc:Ignorable="d"
        Title="PokemonInfoInput" Height="297" Width="323">
    <Grid Margin="0,0,0,-6">
        <TextBox HorizontalAlignment="Center" Margin="0,77,0,0" TextWrapping="Wrap" Text="{Binding PokeId}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="45,73,0,0" VerticalAlignment="Top"/>
        <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Click="Button_Click" Height="27" Width="79"/>

    </Grid>
</Window>
