<Window x:Class="PokeWallet.TrainerInfoInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeWallet"
        mc:Ignorable="d"
        Title="TrainerInfoInput" Height="303" Width="377">
    <Grid Margin="0,0,0,15">
        <TextBox HorizontalAlignment="Center" Margin="0,49,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="40,45,0,0" VerticalAlignment="Top"/>
        <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Click="Button_Click" Height="27" Width="79"/>
        <TextBox HorizontalAlignment="Center" Margin="0,104,0,0" TextWrapping="Wrap" Text="{Binding Age}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="40,100,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
